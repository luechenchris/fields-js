{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib/commonjs"
  },
  "files": [
    "./src/index.ts",
    "./src/defined.ts",
  ],
  "include": ["src/**/*"],
  "exclude": ["src/__test__"]
}